<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<!-- 配置SpringMVC注解驱动 conversion-service="conversionService"自定义参数绑定的注入 -->
	<mvc:annotation-driven conversion-service="conversionServiceID" />



	<!-- 自定义参数绑定 -->
	<bean id="conversionServiceID"
		class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
		<!-- 转换器 -->
		<property name="converters">
			<!-- 日期类型转换器 -->
			<bean class="com.slk.wph.framework.Converters.DateConverters" />
		</property>
	</bean>

	<!-- 配置扫描器 -->
	<context:component-scan base-package="com.slk.wph.controller.*">  
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller" />  
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Service" />  
    </context:component-scan>  	
		
		

	<!-- 静态资源访问 -->
	<mvc:resources location="/code/" mapping="/code/**" />
<!-- 	<mvc:resources location="/statics/img/" mapping="/statics/img/**" /> -->
<!-- 	<mvc:resources location="/statics/js/" mapping="/statics/js/**" /> -->
<!-- 	<mvc:resources location="/statics/css/" mapping="/statics/css/**" /> -->
<!-- 	<mvc:resources location="/statics/test/" mapping="/statics/test/**" /> -->
	<mvc:resources location="/statics/" mapping="/statics/**" />
	<mvc:resources location="/assets/" mapping="/assets/**" />
	<mvc:resources location="/bootstrap/" mapping="/bootstrap/**" />
	<mvc:resources location="/print/" mapping="/print/**" />
	<mvc:resources location="/qr/" mapping="/qr/**" />


	<!-- 配置视图控制器 前缀 + viewName + 后缀 -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<!-- 前缀 -->
		<property name="prefix" value="/code/"></property>
		<!-- 后缀 -->
		<property name="suffix" value=".jsp"></property>

	</bean>

	<!-- 支持上传文件 -->
	<bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="defaultEncoding" value="utf-8"></property>
		<property name="maxUploadSize" value="10485760000"></property>
		<property name="maxInMemorySize" value="40960"></property>
	</bean>



	<!-- 避免IE执行AJAX时,返回JSON出现下载文件 -->
	<bean id="mappingJacksonHttpMessageConverter"
		class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
		<property name="supportedMediaTypes">
			<list>
				<value>text/html;charset=UTF-8</value>
			</list>
		</property>
	</bean>




	<!-- 启动Spring MVC的注解功能，完成请求和注解POJO的映射 -->
	<bean
		class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
		<property name="messageConverters">
			<list>
				<ref bean="mappingJacksonHttpMessageConverter" /><!-- json转换器 -->
			</list>
		</property>
	</bean>
		
		
		
	<!-- 全局异常处理器
		  只要实现了HandlerExceptionResolver接口的类，就是全局异常处理器 -->
	<bean class="com.slk.wph.framework.Exception.CustimExceptionResolver"></bean>	
		
	

	<!-- 配置拦截器 -->
	<mvc:interceptors>
		<!-- 如果是多个拦截器，则顺序执行 -->

		<mvc:interceptor>
			<mvc:mapping path="/**/" />
			<mvc:exclude-mapping path="/assets/**" />
			<mvc:exclude-mapping path="/bootstrap/**" />
			<mvc:exclude-mapping path="/statics/**" />
			<mvc:exclude-mapping path="/WebService/**" />
			<bean class="com.slk.wph.framework.Interceptor.AccessIntercept.LoginInterceptor">
				<property name="excludedUrls">
					<list>
						<value>/</value>
					</list>
				</property>
			</bean>
		</mvc:interceptor>

		<mvc:interceptor>
			<mvc:mapping path="/**/" />
			<mvc:exclude-mapping path="/assets/**" />
			<mvc:exclude-mapping path="/bootstrap/**" />
			<mvc:exclude-mapping path="/statics/**" />
			<mvc:exclude-mapping path="/WebService/**" />
			<bean class="com.slk.wph.framework.Interceptor.AccessIntercept.PrivilegeInterceptor"></bean>
		</mvc:interceptor>

<mvc:interceptor>  
           	<mvc:mapping path="/**/" />
			<mvc:exclude-mapping path="/assets/**" />
			<mvc:exclude-mapping path="/bootstrap/**" />
			<mvc:exclude-mapping path="/statics/**" />
			<mvc:exclude-mapping path="/WebService/**" />
           <bean class="com.slk.wph.framework.Interceptor.AccessIntercept.CheckDataUrlDataInterceptor"/>  
       </mvc:interceptor>  
	</mvc:interceptors> 
	
	
	
</beans>
