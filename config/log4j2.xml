<?xml version="1.0" encoding="UTF-8"?>

<!--
    status : 这个用于设置log4j2自身内部的信息输出,可以不设置,当设置成trace时,会看到log4j2内部各种详细输出
    monitorInterval : Log4j能够自动检测修改配置文件和重新配置本身, 设置间隔秒数。
-->
<Configuration   monitorInterval="600">

    <Properties>
        <property name="log_pattern">%d{yyyy-MM-dd HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n</property>
        <property name="error">/opt/project/wph/logs/error.log</property>
        <property name="logs">/opt/project/wph/logs/logs.log</property>
        <property name="rolling_file_name">/opt/project/wph/logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz</property>

        <property name="every_file_size">10M</property><!-- 日志切割的最小单位 -->
        <property name="output_log_level">info</property><!-- 日志输出级别 -->
    </Properties>

    <Appenders>

              <!--这个输出控制台的配置-->
        <Console name="Console" target="SYSTEM_OUT">
            <!--控制台只输出level及以上级别的信息（onMatch），其他的直接拒绝（onMism
            atch）-->
            <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
            <!--这个都知道是输出日志的格式-->
            <PatternLayout pattern="${log_pattern}"/>
        </Console>

 <!-- 按月生成归档日志，可以使用 filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz" -->
        <!-- 显示error级别之外的信息 -->
    <!--     <RollingFile name="RollingFile" fileName="${logs}"
                     filePattern="${rolling_file_name}">
            <PatternLayout pattern="${log_pattern}"/>
            <SizeBasedTriggeringPolicy size="${every_file_size}"/>
            <Filters>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY"/>
              </Filters>
        </RollingFile> -->

        <!--如果需要配置多个Rollingfile地址，还需要在root下添加appender-ref ref="RollingFile1"/>
            只显示error级别的信息
         -->
      <RollingFile name="RollingFile1" fileName="${error}"
                     filePattern="/opt/project/wph/logs/error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n"/>
            <SizeBasedTriggeringPolicy size="10MB"/>
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
              </Filters>
        </RollingFile>


    </Appenders>
   <!--然后定义logger，只有定义了logger并引入的appender，appender才会生效-->
    <loggers>
        <!--建立一个默认的root的logger，需要在root的level中指定输出的级别，-->
        <root level="${output_log_level}">
           <!--  <appender-ref ref="RollingFile"/> -->
             <appender-ref ref="RollingFile1"/>
            <appender-ref ref="Console"/>
        </root>
        <!--过滤掉spring和mybatis的一些无用的DEBUG信息-->
                 <logger name="org.springframework" level="INFO"></logger>
                 <logger name="org.mybatis" level="INFO"></logger>

          <Logger name="com.slk.wph.module" level="TRACE" additivity="false">
            <AppenderRef ref="Console"/>

        </Logger>
    </loggers>



</Configuration>